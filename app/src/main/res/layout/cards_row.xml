<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:foreground="@drawable/rounded_fg"
        app:srcCompat="@drawable/ic_copy" />

    <TextView
        android:id="@+id/text_path"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:baselineAligned="false"
        android:fontFamily="@font/roboto"
        android:maxLength="30"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCard_modify"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCard_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_menu_delete"
        android:fontFamily="@font/roboto"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_path"
        app:layout_constraintEnd_toStartOf="@id/btnCard_modify"
        app:layout_constraintStart_toEndOf="@+id/text_path" />

    <Button
        android:id="@+id/btnCard_modify"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_menu_edit"
        android:fontFamily="@font/roboto"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCard_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCard_delete" />

    <Button
        android:id="@+id/playCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_menu_slideshow"
        android:fontFamily="@font/roboto"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCard_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCard_delete" />


</LinearLayout>