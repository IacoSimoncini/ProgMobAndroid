<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="5dp">
    <!--android:background="@drawable/gradient_button_background"-->

    <ImageView
        android:id="@+id/user_propic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_fg"
        app:srcCompat="@drawable/ic_account" />

    <TextView
        android:id="@+id/user_firstname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/user_lastname"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnCard_delete"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:background="@android:drawable/ic_menu_delete"
        android:fontFamily="@font/roboto"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_path"
        app:layout_constraintEnd_toStartOf="@id/btnCard_modify"
        app:layout_constraintStart_toEndOf="@+id/text_path" />

</LinearLayout>